<Page
    x:Class="Lynn.Client.Views.TestsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lynn.Client.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:ConnectionId='1' x:Name="TitleRow" Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Lynn" FontSize="60" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" />
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Feladatsorok" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <StackPanel Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Image Source="ms-appx:///Assets/profile.jpg" Height="30" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding LoggedInUser.Username}" FontSize="30" Margin="20,7,10,10"/>
            <TextBlock Text="{Binding LoggedInUser.Points}" FontSize="30" Margin="20,7,10,10"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="3" VerticalScrollBarVisibility="Visible">
            <VariableSizedWrapGrid x:ConnectionId='2' Name="TestsVariableSizedWrapGrid" Margin="20,25,0,0" Orientation="Horizontal"></VariableSizedWrapGrid>
        </ScrollViewer>
    </Grid>
</Page>

