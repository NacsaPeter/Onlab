<Page
    x:Class="Lynn.Client.Views.LoggedInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views = "using:Lynn.Client.Views"
    mc:Ignorable="d">

    <Grid>
        <Pivot Margin="0,20,0,0" HeaderTemplate="{StaticResource PivotHeaderTemplate}">

            <Pivot.LeftHeader>
                <TextBlock Text="Lynn" FontSize="60" Margin="20,-14,50,20" FontWeight="Bold" />
            </Pivot.LeftHeader>

            <PivotItem Header="Tanulás">
                <views:LearningPage></views:LearningPage>
            </PivotItem>

            <PivotItem Header="Tanítás">
                <Grid Background="Red">
                </Grid>
            </PivotItem>

            <Pivot.RightHeader>
                <StackPanel Margin="0,0,20,0" Orientation="Horizontal">
                    <Image Source="ms-appx:///Assets/profile.jpg" Height="40" Margin="0,-10,0,0"/>
                    <TextBlock Text="{Binding LoggedInUser.Username}" FontSize="40" Margin="20,7,10,10"/>
                    <TextBlock Text="{Binding LoggedInUser.Points}" FontSize="40" Margin="20,7,10,10"/>
                </StackPanel>
            </Pivot.RightHeader>
        </Pivot>
    </Grid>
</Page>

