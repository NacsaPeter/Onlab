<Page
    x:Class="Lynn.Client.Views.DoExercisesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lynn.Client.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <CollectionViewSource x:Key="ExercisesViewSource" IsSourceGrouped="False" Source="{Binding VocabularyExercises}"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="AliceBlue">
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="Lynn" FontSize="{StaticResource LargeFontSize}" Margin="20,10" FontWeight="Bold" />
                <TextBlock Text="{Binding Test.CategoryName}" FontSize="{StaticResource LargeFontSize}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <StackPanel Margin="20,0" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button FontFamily="Segoe MDL2 Assets" Content="&#xE77B;"
                                Width="50" Height="50" Background="Transparent"/>
                    <TextBlock Text="{Binding LoggedInUser.Username}" FontSize="{StaticResource MediumFontSize}" Margin="20,19,10,10"/>
                    <TextBlock Text="{Binding LoggedInUser.Points}" FontSize="{StaticResource MediumFontSize}" Margin="20,19,10,10"/>
                </StackPanel>
            </Grid>

        <Grid x:ConnectionId='1' Grid.Row="1" Name="GridOfTest">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.3*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="0.8*"/>
            </Grid.ColumnDefinitions>

            <GridView x:ConnectionId='2' Name="LeftGridView" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                      ItemsSource="{Binding Source={StaticResource ExercisesViewSource}}"
                      IsItemClickEnabled="True"                                Background="WhiteSmoke">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="{Binding ElementName=LeftGridView,Path=ActualWidth}" Height="60">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.35*" />
                                <ColumnDefinition Width="0.65*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="{Binding Picture}" Height="25" VerticalAlignment="Center"
                                   HorizontalAlignment="Center" Grid.Column="0"/>
                            <TextBlock Text="{Binding Expression}" FontSize="{StaticResource MediumFontSize}"
                                       VerticalAlignment="Center" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <StackPanel Grid.Row="0" Grid.Column="1" Margin="200,100,200,0" HorizontalAlignment="Center">
                <Image Source="{Binding CurrentExercise.Picture}" Height="200" Margin="0,10"/>
                <TextBlock Text="{Binding CurrentExercise.Expression}" HorizontalAlignment="Center" Margin="0,10"/>
                <TextBlock Text="{Binding CurrentExercise.TranslatedExpression}" HorizontalAlignment="Center" Margin="0,10"/>
                <TextBlock Text="{Binding CurrentExercise.Sentence}" HorizontalAlignment="Center" Margin="0,10"/>
                <TextBlock Text="{Binding CurrentExercise.TranslatedSentence}" HorizontalAlignment="Center" Margin="0,10"/>
            </StackPanel>
            
            <Button x:ConnectionId='3' Name="StartButton" Grid.Row="1" Grid.Column="1" Command="{Binding Start_Click}" HorizontalAlignment="Center"
                    Background="LightGreen" Content="Feladatsor indítása" BorderThickness="1" BorderBrush="Black"/>

        </Grid>
    </Grid>
</Page>

